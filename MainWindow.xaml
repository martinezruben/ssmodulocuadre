<Window x:Class="WPFModuloCuadre.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPFModuloCuadre.Converters"
        xmlns:models="clr-namespace:WPFModuloCuadre.Models"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="{Binding TituloVentana}" Height="950" Width="1450" 
        WindowState="Maximized" Background="#F4F6F6">

    <Window.Resources>
        <local:DiferenciaColorConverter x:Key="ColorConv"/>
        <local:GroupTotalConverter x:Key="GroupTotalConv"/>
        <local:GroupTotalMultiConverter x:Key="GroupTotalMultiConv"/>

        <CollectionViewSource x:Key="VendedoresAgrupados" Source="{Binding OperadoresView}" IsLiveGroupingRequested="True">
            <CollectionViewSource.LiveGroupingProperties>
                <sys:String>Rol</sys:String>
            </CollectionViewSource.LiveGroupingProperties>
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Rol"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <ObjectDataProvider x:Key="RolesEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:RolOperario"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <CollectionViewSource x:Key="PagosAgrupados" Source="{Binding OperadorSeleccionado.Pagos}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Categoria"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#37474F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#CFD8DC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" DockPanel.Dock="Left">
                    <TextBlock Text="FECHA:" FontWeight="Bold" Margin="0,0,5,0" Foreground="#455A64"/>
                    <DatePicker SelectedDate="{Binding FechaActual}" Width="120"/>
                    <TextBlock Text="TURNO:" FontWeight="Bold" Margin="30,0,5,0" Foreground="#455A64"/>
                    <ComboBox ItemsSource="{Binding TurnosDisponibles}" SelectedItem="{Binding TurnoSeleccionado}" Width="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Command="{Binding AdministrarEmpleadosCommand}" 
            Background="#455A64" Content="👥 ADMIN. EMPLEADOS" 
            Margin="0,0,10,0"/>
                    <Button Command="{Binding VerHistorialCommand}" 
            Background="#0277BD" Content="📜 VER HISTORIAL"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <GroupBox Grid.Row="1" Header="CONTROL DE PISTA" Margin="0,0,0,10" BorderBrush="#90A4AE">
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Command="{Binding AbrirLecturasCommand}" 
        Width="180" Height="100" Margin="0,0,15,0" 
        Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="BtnBorder" CornerRadius="12" BorderThickness="1" BorderBrush="#0277BD">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#039BE5" Offset="0"/>
                                        <GradientStop Color="#0277BD" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <Border.Effect>
                                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                                </Border.Effect>

                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Viewbox Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,5">
                                        <TextBlock Text="⛽" Foreground="White" FontFamily="Segoe UI Emoji, Segoe UI Symbol"/>
                                    </Viewbox>

                                    <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                                        <TextBlock Text="INGRESAR" Foreground="#E1F5FE" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        <TextBlock Text="LECTURAS" Foreground="White" FontSize="16" FontWeight="Black" HorizontalAlignment="Center" Margin="0,-2,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="BtnBorder" Property="Background" Value="#4FC3F7"/>
                                    <Setter TargetName="BtnBorder" Property="BorderBrush" Value="#81D4FA"/>
                                    <Setter TargetName="BtnBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#039BE5" Direction="270" ShadowDepth="3" BlurRadius="8" Opacity="0.6"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="BtnBorder" Property="Background" Value="#01579B"/>
                                    <Setter TargetName="BtnBorder" Property="Effect" Value="{x:Null}"/>
                                    <Setter TargetName="BtnBorder" Property="Margin" Value="0,2,0,0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,5">
                    <ItemsControl ItemsSource="{Binding Dispensadores}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="DispCard" 
        Background="White" 
        BorderBrush="#CFD8DC" 
        BorderThickness="1" 
        CornerRadius="6" 
        Width="125" 
        Margin="2,0,2,5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Border Background="#ECEFF1" CornerRadius="5,5,0,0" Padding="4,6" BorderBrush="#CFD8DC" BorderThickness="0,0,0,1">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="⛽" Foreground="#546E7A" FontSize="10" Margin="0,0,3,0" FontFamily="Segoe UI Emoji, Segoe UI Symbol" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="10" Foreground="#37474F" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Grid.Row="1" Padding="5,8">
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding TotalDispensador, StringFormat=C}" 
                           FontWeight="Black" 
                           FontSize="14" 
                           Foreground="#2E7D32" 
                           HorizontalAlignment="Center"/>

                                                <TextBlock Text="{Binding TotalGalones, StringFormat='{}{0:N1} gls'}" 
                           FontSize="10" 
                           Foreground="#90A4AE" 
                           HorizontalAlignment="Center" 
                           Margin="0,2,0,0" 
                           FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>

                                <DataTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="DispCard" Property="BorderBrush" Value="#4FC3F7"/>
                                        <Setter TargetName="DispCard" Property="Background" Value="#FAFAFA"/>
                                    </Trigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </GroupBox>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="White" BorderBrush="#B0BEC5" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="VENDEDORES" Background="#455A64" Foreground="White" Padding="10" FontWeight="Bold"/>
                    <ListBox Grid.Row="1" ItemsSource="{Binding Source={StaticResource VendedoresAgrupados}}" 
         SelectedItem="{Binding OperadorSeleccionado}" 
         Background="#F5F7F8" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <ListBox.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <Border Background="#CFD8DC" Padding="10,6" Margin="10,10,10,5" CornerRadius="4">
                                            <TextBlock Text="{Binding Name, StringFormat='OPERARIOS DE {0}'}" 
                                   FontWeight="Black" Foreground="#37474F" FontSize="11" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListBox.GroupStyle>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="CardBorder" Background="White" BorderBrush="#CFD8DC" BorderThickness="1" 
                    CornerRadius="6" Padding="12" Margin="10,5">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <DockPanel LastChildFill="False" Margin="0,0,0,12">
                                            <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="14" Foreground="#263238" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Diferencia, StringFormat=C}" FontWeight="Bold" FontSize="14" 
                                   Foreground="{Binding Diferencia, Converter={StaticResource ColorConv}}" 
                                   DockPanel.Dock="Right" VerticalAlignment="Center"/>
                                        </DockPanel>

                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Asignación:" FontSize="11" Foreground="#90A4AE" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>

                                            <ComboBox Grid.Column="1" ItemsSource="{Binding Source={StaticResource RolesEnum}}" 
                                  SelectedItem="{Binding Rol, UpdateSourceTrigger=PropertyChanged}" 
                                  FontSize="11" Padding="6,2" BorderThickness="1" BorderBrush="#ECEFF1" 
                                  Background="#FAFAFA" Foreground="#455A64" FontWeight="SemiBold"/>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                        <Setter TargetName="CardBorder" Property="BorderBrush" Value="#0288D1"/>
                                        <Setter TargetName="CardBorder" Property="BorderThickness" Value="2"/>
                                        <Setter TargetName="CardBorder" Property="Background" Value="#F1FBFF"/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True"/>
                                            <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter TargetName="CardBorder" Property="BorderBrush" Value="#B3E5FC"/>
                                        <Setter TargetName="CardBorder" Property="Background" Value="#FAFAFA"/>
                                    </MultiDataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Grid.Row="2" Command="{Binding AgregarOperadorCommand}" Content="+ AGREGAR" Background="#00C853" Height="40"/>
                </Grid>
            </Border>

            <GroupBox Grid.Column="1" Header="DETALLE" Margin="10,0,0,0">
                <Grid DataContext="{Binding OperadorSeleccionado}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.7*"/>
                        <ColumnDefinition Width="1.1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1.2*"/>
                        </Grid.RowDefinitions>

                        <Border Background="#FFF3E0" Padding="8" Margin="0,0,0,10" BorderBrush="#FFCC80" BorderThickness="1">
                            <DockPanel>
                                <TextBlock Text="🛒 TIENDA:" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding VentaTienda, UpdateSourceTrigger=PropertyChanged}" Width="120" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </Border>

                        <Border Grid.Row="1" BorderBrush="#CFD8DC" BorderThickness="1" Margin="0,0,0,10" Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="1" BorderBrush="#CFD8DC" BorderThickness="1" Margin="0,0,0,10" Background="White">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Border Background="#ECEFF1" BorderBrush="#CFD8DC" BorderThickness="0,0,0,1" Padding="10,8,25,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="PRODUCTO" FontWeight="Bold" Foreground="#455A64" FontSize="11"/>
                                                <TextBlock Grid.Column="1" Text="CANT." FontWeight="Bold" Foreground="#455A64" FontSize="11" HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="SUBTOTAL" FontWeight="Bold" Foreground="#455A64" FontSize="11" HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Border>

                                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                            <ItemsControl ItemsSource="{Binding Lubricantes}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#F5F5F5" BorderThickness="0,0,0,1">
                                                            <Grid Margin="10,5">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="60"/>
                                                                    <ColumnDefinition Width="80"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                <TextBox Grid.Column="1" Text="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}" Margin="5,0" TextAlignment="Center" VerticalContentAlignment="Center"/>
                                                                <TextBlock Grid.Column="2" Text="{Binding Subtotal, StringFormat=C}" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#2E7D32"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>

                                        <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="#CFD8DC" BorderThickness="0,1,0,0" Padding="10,8,25,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="TOTAL LUBRICANTES:" FontWeight="Bold" Foreground="#37474F" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding TotalLubricantes, StringFormat=C}" FontWeight="Black" Foreground="#2E7D32" HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>


                            </Grid>
                        </Border>

                        <TextBlock Grid.Row="2" Text="⛽ RESUMEN COMBUSTIBLE" FontWeight="Bold" Margin="0,5"/>

                        <Border Grid.Row="3" BorderBrush="#80DEEA" BorderThickness="1" Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Background="#ECEFF1" BorderBrush="#CFD8DC" BorderThickness="0,0,0,1" Padding="5,8,25,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="65"/>
                                            <ColumnDefinition Width="65"/>
                                            <ColumnDefinition Width="85"/>
                                            <ColumnDefinition Width="85"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="COMBUSTIBLE" FontWeight="Bold" Foreground="#455A64" FontSize="11"/>
                                        <TextBlock Grid.Column="1" Text="GALONES" FontWeight="Bold" Foreground="#455A64" FontSize="11" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="GL. TURNO" FontWeight="Bold" Foreground="#90A4AE" FontSize="10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="VENTA" FontWeight="Bold" Foreground="#455A64" FontSize="11" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="4" Text="TOT. TURNO" FontWeight="Bold" Foreground="#90A4AE" FontSize="10" HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding ResumenCombustible}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#F5F5F5" BorderThickness="0,0,0,1" Padding="5,6">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="65"/>
                                                            <ColumnDefinition Width="65"/>
                                                            <ColumnDefinition Width="85"/>
                                                            <ColumnDefinition Width="85"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding NombreCombustible}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding GalonesOperario, StringFormat=N1}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        <TextBlock Grid.Column="2" Text="{Binding GalonesTurno, StringFormat=N1}" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11"/>
                                                        <TextBlock Grid.Column="3" Text="{Binding ValorOperario, StringFormat=C}" FontWeight="Bold" Foreground="#0D47A1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                                        <TextBlock Grid.Column="4" Text="{Binding ValorTurno, StringFormat=C}" Foreground="Gray" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="11"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="#CFD8DC" BorderThickness="0,1,0,0" Padding="5,8,25,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="85"/>
                                            <ColumnDefinition Width="85"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="TOTAL COMBUSTIBLE:" FontWeight="Bold" Foreground="#37474F" HorizontalAlignment="Right" Margin="0,0,10,0"/>

                                        <TextBlock Grid.Column="1" Text="{Binding AsignacionCombustible, StringFormat=C}" FontWeight="Black" Foreground="#0D47A1" HorizontalAlignment="Right"/>

                                        <TextBlock Grid.Column="2" Text="{Binding DataContext.TotalVentaPista, RelativeSource={RelativeSource AncestorType=Window}, StringFormat=C}" FontWeight="Bold" Foreground="Gray" HorizontalAlignment="Right" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                    <Border Grid.Column="1" Background="#F5F5F5" Margin="5" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
                                <ItemsControl ItemsSource="{Binding Source={StaticResource PagosAgrupados}}">
                                    <ItemsControl.GroupStyle>
                                        <GroupStyle>
                                            <GroupStyle.ContainerStyle>
                                                <Style TargetType="{x:Type GroupItem}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                                <StackPanel Margin="0,0,0,8">
                                                                    <Border Background="#1565C0" Padding="8,4">
                                                                        <DockPanel>
                                                                            <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold"/>
                                                                            <TextBlock Foreground="White" FontWeight="Normal" HorizontalAlignment="Right">
                                                                                <TextBlock.Text>
                                                                                    <MultiBinding Converter="{StaticResource GroupTotalMultiConv}" StringFormat="C">
                                                                                        <Binding Path="Items"/>
                                                                                        <Binding Path="DataContext.OperadorSeleccionado.TotalPagos" RelativeSource="{RelativeSource AncestorType={x:Type Window}}"/>
                                                                                    </MultiBinding>
                                                                                </TextBlock.Text>
                                                                            </TextBlock>
                                                                        </DockPanel>
                                                                    </Border>
                                                                    <Border Background="White" BorderBrush="#CFD8DC" BorderThickness="1,0,1,1">
                                                                        <ItemsPresenter />
                                                                    </Border>
                                                                </StackPanel>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </GroupStyle.ContainerStyle>
                                        </GroupStyle>
                                    </ItemsControl.GroupStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="10,4">
                                                <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center"/>
                                                <TextBox Text="{Binding Monto, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="100" HorizontalAlignment="Right" FontSize="16" FontWeight="Black"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <StackPanel Grid.Row="1">

                                <Border Background="White" BorderBrush="#CFD8DC" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Nombre, StringFormat='CUADRE: {0}'}" FontWeight="Black" Foreground="#1565C0" FontSize="13" Margin="0,0,0,8" TextTrimming="CharacterEllipsis"/>

                                        <Grid Margin="0,2">
                                            <TextBlock Text="Debe Entregar:" Foreground="#455A64" FontSize="11" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding TotalAEntregar, StringFormat=C}" FontWeight="Bold" Foreground="#37474F" HorizontalAlignment="Right" FontSize="12"/>
                                        </Grid>

                                        <Grid Margin="0,2">
                                            <TextBlock Text="Total Entregado:" Foreground="#455A64" FontSize="11" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding TotalPagos, StringFormat=C}" FontWeight="Bold" Foreground="#2E7D32" HorizontalAlignment="Right" FontSize="12"/>
                                        </Grid>

                                        <Separator Margin="0,6"/>

                                        <Grid>
                                            <TextBlock Text="DIFERENCIA:" FontWeight="Black" Foreground="#263238" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Diferencia, StringFormat=C}" 
                                   Foreground="{Binding Diferencia, Converter={StaticResource ColorConv}}" 
                                   FontWeight="Black" FontSize="18" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <Border Background="#37474F" CornerRadius="6" Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="CUADRE GENERAL ESTACIÓN" FontWeight="Black" Foreground="White" FontSize="12" Margin="0,0,0,8"/>

                                        <Grid Margin="0,2">
                                            <TextBlock Text="Venta Pista:" Foreground="#B0BEC5" FontSize="11"/>
                                            <TextBlock Text="{Binding DataContext.TotalVentaPista, RelativeSource={RelativeSource AncestorType=Window}, StringFormat=C}" 
                                   FontWeight="Bold" Foreground="White" HorizontalAlignment="Right" FontSize="11"/>
                                        </Grid>

                                        <Grid Margin="0,2">
                                            <TextBlock Text="Sin Asignar:" Foreground="#B0BEC5" FontSize="11" ToolTip="Dinero en dispensadores sin vendedor asignado"/>
                                            <TextBlock Text="{Binding DataContext.PendienteDeAsignar, RelativeSource={RelativeSource AncestorType=Window}, StringFormat=C}" 
                                   FontWeight="Bold" Foreground="#FFCA28" HorizontalAlignment="Right" FontSize="11"/>
                                        </Grid>

                                        <Separator Background="#546E7A" Margin="0,6"/>

                                        <Grid>
                                            <TextBlock Text="BALANCE:" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding DataContext.DiferenciaTotalTurno, RelativeSource={RelativeSource AncestorType=Window}, StringFormat=C}" 
