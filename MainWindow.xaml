        <Border Grid.Row="3" Background="#263238" Padding="15">
            <DockPanel LastChildFill="False">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                    <Button Command="{Binding GuardarBorradorCommand}" 
            Content="💾 GUARDAR CAMBIOS" 
            Background="#455A64" 
            Width="200" Height="45" 
            Margin="0,0,10,0"
            FontSize="14" FontWeight="Bold"/>

                    <Button Command="{Binding GuardarTurnoCommand}" 
            Content="🏁 FINALIZAR Y CERRAR TURNO" 
            Background="#2E7D32" 
            Width="250" Height="45" 
            FontSize="14" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBlock Text="BALANCE TURNO:" Foreground="#B0BEC5" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding DiferenciaTotalTurno, StringFormat=C}" 
                               Foreground="{Binding DiferenciaTotalTurno, Converter={StaticResource ColorConv}}" 
